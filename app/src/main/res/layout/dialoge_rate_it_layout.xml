<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rate_it_main_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="420dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_rate_it_img"
        android:layout_width="match_parent"
        android:layout_height="125dp"

        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ic_thumb_up_black_18dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Do you like our app?"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/dialog_rate_it_img" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="10dp"
        android:text="If you enjoy using I-dictionary, would you mind taking a moment to rate it? Thanks!" />

    <RatingBar
        android:id="@+id/rate_it_ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:max="5"
        android:numStars="5"
        android:progressBackgroundTint="@color/colorPrimaryLight"
        android:progressTint="@color/colorPrimary"
        android:scaleX=".8"
        android:scaleY=".8"
        android:stepSize="1"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/rate_it_ratetxt_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        tools:text="Love it!" />

    <TextView
        android:id="@+id/rate_it_ratetxt_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        tools:text="Why not show some love with a nice comment on Google Play?" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/not_now"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="NOT NOW"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:longClickable="true"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp" />
        <TextView
            android:id="@+id/rate_it_sure_or_feedback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            tools:text="  SURE  "
            android:padding="10dp"
            android:longClickable="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/colorPrimary"/>

    </RelativeLayout>


</LinearLayout>