<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".SettingsActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/settings_quick_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quick Translate"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Display the search box in the notification bar"
            android:layout_below="@id/settings_quick_translate"
            android:textSize="12sp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/settings_quick_translate_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/colorPrimary"/>

    </RelativeLayout>
    <RelativeLayout
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/settings_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Receive all notifications"
            android:layout_below="@id/settings_notification"
            android:textSize="12sp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/settings_notification_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>
    <RelativeLayout
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:background="@drawable/ripple_effect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/settings_clear_recent_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Recent History"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Clear all the recent history below search box"
            android:layout_below="@id/settings_clear_recent_history"
            android:textSize="12sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:background="@drawable/ripple_effect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/settings_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Version 1.0"
            android:layout_below="@id/settings_about"
            android:textSize="12sp"/>

    </RelativeLayout>

</LinearLayout>